@model ProjetoLivraria.MVC.ViewModels.EditoraViewModel
@using ProjetoLivraria.MVC.Gentelella.Helpers
@{
    ViewBag.Title = "Editoras - Excluir";
}

@using (Html.CreatePainel("Editora", "excluir"))
{
    <div class="x_content">
        <h4>Você tem certeza que deseja excluir o registro?</h4>
        <br />
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger alert-dismissible fade in" role="alert">
                @ViewBag.Error
            </div>
        }
        <div class="form-horizontal form-label-left">

            <div class="form-group">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.DataCadastro)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DataCadastro)
                    </dd>
                </dl>
            </div>
            <div class="ln_solid"></div>
            @using (Html.BeginForm(new { @class = "form-group" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <a class="btn btn-default" href="@Url.Action("Index")">Voltar</a>
                    <input type="submit" class="btn btn-danger" value="Excluir" />
                </div>
            }
        </div>
    </div>
}