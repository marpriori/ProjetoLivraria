@model ProjetoLivraria.MVC.ViewModels.EditoraViewModel
@using ProjetoLivraria.MVC.Gentelella.Helpers
@{
    ViewBag.Title = "Editoras - Detalhes";
}

@using (Html.CreatePainel("Editora", "detalhes"))
{
    <div class="x_content">
        <br />
        <div class="form-horizontal form-label-left">

            <div class="form-group">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.DataCadastro)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DataCadastro)
                    </dd>
                </dl>
            </div>
            <div class="ln_solid"></div>
            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <a class="btn btn-default" href="@Url.Action("Index")">Voltar</a>
                    <a class="btn btn-warning" href="@Url.Action("Edit", new { id = Model.EditoraId })">Editar</a>
                </div>
            </div>
        </div>
    </div>
}